<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
  		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  		x:Class="KitchenSupport.LoginPage">
 		<ContentPage.Content>
  			<StackLayout Spacing="20" Padding="50"
   			   	VerticalOptions="Center">
   				<Label Text="Welcome to Kitchen.Support"
   					FontSize="36"
   					XAlign="Center"/>
   				<Entry Placeholder="Email"
  				   	x:Name="email"
   				   	Text="{Binding email}"/>
   				<Entry Placeholder="Password"
   				   	x:Name="password"
   				   	Text="{Binding password}"
   				   	IsPassword="true"/>
   				<Button Text="Login" TextColor="White"
   				   	BackgroundColor="#77D065"
   				   	Clicked="login"/>
   				<Button Text="Register Account" TextColor="White"
   				    BackgroundColor="#77D065"
   				    Clicked="register"/>
   				<Button Text="Forgot Password?" TextColor="White"
   				    BackgroundColor="#77D065"
   				    Clicked="forgotPassword"/>
   			</StackLayout>
   		</ContentPage.Content>
</ContentPage>